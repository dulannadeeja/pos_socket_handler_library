<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Focused state -->
    <item android:color="@color/primaryColor" android:state_focused="true" />
    <!-- Hovered state -->
    <item android:color="@color/primaryColor" android:state_hovered="true" />
    <!-- Disabled state -->
    <item android:color="@color/textSecondaryColor" android:state_enabled="false" />
    <!-- Default state -->
    <item android:color="@color/textSecondaryColor" />
</selector>