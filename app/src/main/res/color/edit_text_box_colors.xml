<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Focused state (active) -->
    <item android:color="@color/primaryColor" android:state_focused="true" />
    <!-- Hovered state -->
    <item android:alpha="0.87" android:color="@color/primaryColor" android:state_hovered="true" />
    <!-- Disabled state -->
    <item android:alpha="0.12" android:color="@color/textSecondaryColor" android:state_enabled="false" />
    <!-- Default (inactive state) -->
    <item android:alpha="0.38" android:color="@color/textSecondaryColor" />
</selector>